            <!-- Hospital Card 1 -->
            <div class="hospital-card bg-white rounded-xl shadow-md hover:shadow-lg transition-shadow duration-300 overflow-hidden" 
                 data-name="<%= hospital.name %>" 
                 data-type="<%= hospital.speciality %>" 
                 data-location="<%= hospital.location %>"
                 data-keywords="<%= hospital.speciality %>">
                <!-- Hospital Image -->
                <div class="h-48 bg-gradient-to-br from-blue-400 to-blue-600 flex items-center justify-center">
