    <!-- Search and Filter Section -->
    <section class="max-w-7xl mx-auto pt-28 px-4 sm:px-6 lg:px-8 py-6">
        <div class="bg-white border border-gray-300 rounded-xl shadow-sm p-6 mb-8">
            <div class="flex flex-col md:flex-row gap-4">
                <!-- Search Bar -->
                <div class="flex-1">
                    <label class="block text-sm font-medium text-gray-700 mb-2">Search Hospitals</label>
                    <div class="relative">
                        <input 
                            type="text" 
                            id="searchInput"
                            placeholder="Search by hospital name, location, or services..."
                            class="w-full pl-10 pr-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-transparent"
                            onkeyup="filterHospitals()"
                        >
                        <svg class="absolute left-3 top-3.5 w-5 h-5 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M8 4a4 4 0 100 8 4 4 0 000-8zM2 8a6 6 0 1110.89 3.476l4.817 4.817a1 1 0 01-1.414 1.414l-4.816-4.816A6 6 0 012 8z" clip-rule="evenodd"/>
                        </svg>
                    </div>
                </div>
                
                <!-- Specialty Filter -->
                <div class="md:w-64">
                    <label class="block text-sm font-medium text-gray-700 mb-2">Filter by Type</label>
                    <select 
                        id="typeFilter"
                        class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-transparent"
                        onchange="filterHospitals()"
                    >
                        <option value="">All Types</option>
                        <option value="General Hospital">General Hospital</option>
                        <option value="Specialty Hospital">Specialty Hospital</option>
                        <option value="Medical Center">Medical Center</option>
                        <option value="Children's Hospital">Children's Hospital</option>
                        <option value="Emergency Hospital">Emergency Hospital</option>
                    </select>
                </div>
                
                <!-- Clear Filters Button -->
                <div class="md:w-32 flex items-end">
                    <button 
                        onclick="clearFilters()"
                        class="w-full px-4 py-3 bg-gray-100 text-gray-700 rounded-lg hover:bg-gray-200 transition-colors duration-200 flex items-center justify-center"
                    >
                        <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd"/>
                        </svg>
                        Clear
                    </button>
                </div>
            </div>
            
            <!-- Results Counter -->
            <div class="mt-4 pt-4 border-t border-gray-200">
                <p id="resultsCounter" class="text-sm text-gray-600">Showing <%= hospitals.length %> hospitals</p>
            </div>
        </div>
    </section>

    <!-- Main Content -->
    <main class="max-w-7xl pb-12 mx-auto px-4 sm:px-6 lg:px-8 ">
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6" id="hospitalsList">
