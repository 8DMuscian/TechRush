<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Patient Dashboard - SwasthaSetu</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="website icon" href="/images/logo.png" type="png">
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap');
        body { font-family: 'Inter', sans-serif; }
        .sidebar-scroll::-webkit-scrollbar { width: 4px; }
        .sidebar-scroll::-webkit-scrollbar-track { background: #f3f4f6; }
        .sidebar-scroll::-webkit-scrollbar-thumb { background: #9ca3af; border-radius: 2px; }
    </style>
</head>
<body class="bg-white min-h-screen text-gray-900">
    <!-- Mobile Menu Button -->


    <!-- Mobile Overlay -->
    <div id="mobile-overlay" class="fixed inset-0 bg-black bg-opacity-50 z-30 lg:hidden hidden"></div>

    <!-- Left Sidebar Navigation -->
    <div id="mobileMenu" class="fixed left-0 top-0 h-full w-64 bg-gray-100 shadow-xl z-40 sidebar-scroll overflow-y-auto border-r border-gray-300 transform -translate-x-full lg:translate-x-0 transition-transform duration-300 ease-in-out">
        <!-- Logo/Header -->
        <div class="p-6 border-b border-gray-300">
            <div class="flex items-center space-x-3">
                <div class="w-10 h-10 p-2 bg-teal-400 rounded-lg flex items-center justify-center">
                    <script src="https://cdn.lordicon.com/lordicon.js"></script>
                    <lord-icon src="https://cdn.lordicon.com/nvsfzbop.json" trigger="loop" stroke="bold"
                        colors="primary:#2563EB,secondary:#ffffff" style="width:100%;height:100%">
                    </lord-icon>
                </div>
                <div>
                    <h1 class="text-2xl font-bold text-blue-600">Swastha<span class="text-2xl font-bold text-teal-400">Setu</span></h1>
                    <p class="text-sm text-gray-600">Patient Portal</p>
                </div>
            </div>
        </div>

        <!-- User Profile -->
        <div class="p-6 border-b border-gray-300">
            <div class="flex items-center space-x-3">
                <div class="w-12 h-12 rounded-full overflow-hidden bg-gradient-to-br from-blue-400 to-purple-500 flex items-center justify-center">
                <% if (user.dp) { %>
                    <img src="<%= user.dp %>" alt="Profile Picture" class="w-full h-full object-cover">
                <% } else { %>
                    <span class="text-gray-900 font-semibold text-lg"><%= user.fullname.charAt(0).toUpperCase() %></span>
                <% } %>
                </div>
                <div>
                    <h3 class="font-semibold text-gray-900"><%= user.fullname.split(" ")[0] %></h3>
                    <p class="text-xs text-gray-500">SwasthaSetu Member</p>
                </div>
            </div>
        </div>

        <!-- Navigation Menu -->
        <nav class="p-4">
            <ul class="space-y-2">
                <li>
                    <button onclick="showSection('dashboard')" class="nav-item w-full flex items-center space-x-3 px-4 py-3 text-left rounded-lg hover:bg-gray-200 transition-colors duration-200 bg-gray-200 text-blue-600">
                        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                            <path d="M3 13h8V3H3v10zm0 8h8v-6H3v6zm10 0h8V11h-8v10zm0-18v6h8V3h-8z"/>
                        </svg>
                        <span class="font-medium">Dashboard</span>
                    </button>
                </li>
                <li>
                    <button onclick="showSection('appointments')" class="nav-item w-full flex items-center space-x-3 px-4 py-3 text-left rounded-lg hover:bg-gray-200 transition-colors duration-200 text-gray-600">
                        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                            <path d="M19 3h-1V1h-2v2H8V1H6v2H5c-1.11 0-1.99.9-1.99 2L3 19c0 1.1.89 2 2 2h14c1.1 0 2-.9 2-2V5c0-1.1-.9-2-2-2zm0 16H5V8h14v11zM7 10h5v5H7z"/>
                        </svg>
                        <span class="font-medium">Appointments</span>
                    </button>
                </li>
                <li>
                    <button onclick="showSection('appointment-history')" class="nav-item w-full flex items-center space-x-3 px-4 py-3 text-left rounded-lg hover:bg-gray-200 transition-colors duration-200 text-gray-600">
                        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                            <path d="M13 3c-4.97 0-9 4.03-9 9H1l3.89 3.89.07.14L9 12H6c0-3.87 3.13-7 7-7s7 3.13 7 7-3.13 7-7 7c-1.93 0-3.68-.79-4.94-2.06l-1.42 1.42C8.27 19.99 10.51 21 13 21c4.97 0 9-4.03 9-9s-4.03-9-9-9zm-1 5v5l4.28 2.54.72-1.21-3.5-2.08V8H12z"/>
                        </svg>
                        <span class="font-medium">Appointment History</span>
                    </button>
                </li>
                <li>
                    <button onclick="showSection('profile')" class="nav-item w-full flex items-center space-x-3 px-4 py-3 text-left rounded-lg hover:bg-gray-200 transition-colors duration-200 text-gray-600">
                        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                            <path d="M12 12c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm0 2c-2.67 0-8 1.34-8 4v2h16v-2c0-2.66-5.33-4-8-4z"/>
                        </svg>
                        <span class="font-medium">Profile Settings</span>
                    </button>
                </li>
            </ul>
        </nav>

        <!-- Logout Button -->
        <div class="absolute bottom-4 left-4 right-4">
            <button class="w-full flex items-center space-x-3 px-4 py-3 text-left rounded-lg hover:bg-red-100 transition-colors duration-200 text-red-600" onclick="location.href='/logout'">
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M17 7l-1.41 1.41L18.17 11H8v2h10.17l-2.58 2.59L17 17l5-5zM4 5h8V3H4c-1.1 0-2 .9-2 2v14c0 1.1.9 2 2 2h8v-2H4V5z"/>
                </svg>
                <span class="font-medium">Logout</span>
            </button>
        </div>
    </div>

    <!-- Main Content Area -->
    <div class="lg:ml-64 min-h-screen">
        <!-- Top Header -->
        <header class="bg-gray-50 overflow-hidden shadow-sm border-b border-gray-300 px-4 lg:px-8 py-4">
            <div class="flex items-center justify-between">
                <div id="hamburgerDiv" class="pl-2 cursor-pointer lg:hidden" >
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-5">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5" />
                    </svg>
                </div>
                <div class="mx-auto lg:ml-0">
                    <h1 id="pageTitle" class="text-xl lg:text-2xl font-bold text-gray-900">Dashboard</h1>
                    <p id="pageSubtitle" class="text-sm lg:text-base text-gray-600 hidden sm:block">Welcome back, <%= user.fullname.split(" ")[0] %>! Here's your health overview.</p>
                </div>
                <div class="flex items-center space-x-2 lg:space-x-4">
                    <div class="text-right hidden sm:block">
                        <a href="/" class="text-sm font-medium text-gray-900">Home</a>
                    </div>
                </div>
            </div>
        </header>

        <!-- Dashboard Content -->
        <main class="p-4 lg:p-8">
            <!-- Dashboard Section -->
            <div id="dashboard-section" class="section-content">
                <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4 lg:gap-6 mb-6 lg:mb-8">
                    <div class="bg-gray-100 rounded-xl shadow-sm p-4 lg:p-6 border border-gray-300">
                        <div class="flex items-center justify-between">
                            <div>
                                <p class="text-xs lg:text-sm font-medium text-gray-600">Upcoming Appointments</p>
                                <p class="text-2xl lg:text-3xl font-bold text-gray-900"><%= appointments.length %></p>
                            </div>
                            <div class="w-10 h-10 lg:w-12 lg:h-12 bg-blue-600 bg-opacity-20 rounded-lg flex items-center justify-center">
                                <svg class="w-5 h-5 lg:w-6 lg:h-6 text-blue-400" fill="currentColor" viewBox="0 0 24 24">
                                    <path d="M19 3h-1V1h-2v2H8V1H6v2H5c-1.11 0-1.99.9-1.99 2L3 19c0 1.1.89 2 2 2h14c1.1 0 2-.9 2-2z"/>
                                </svg>
                            </div>
                        </div>
                    </div>
                    <div class="bg-gray-100 rounded-xl shadow-sm p-4 lg:p-6 border border-gray-300">
                        <div class="flex items-center justify-between">
                            <div>
                                <p class="text-xs lg:text-sm font-medium text-gray-600">Blood Group</p>
                                <p class="text-2xl lg:text-3xl font-bold text-gray-900"><%= user.bloodGrp %></p>
                            </div>
                            <div class="w-10 h-10 lg:w-12 lg:h-12 bg-green-600 bg-opacity-20 rounded-lg flex items-center justify-center">
                                <svg class="w-5 h-5 lg:w-6 lg:h-6 text-green-400" fill="currentColor" viewBox="0 0 24 24">
                                    <path d="M9 16.17L4.83 12l-1.42 1.41L9 19 21 7l-1.41-1.41z"/>
                                </svg>
                            </div>
                        </div>
                    </div>
                    <div class="bg-gray-100 rounded-xl shadow-sm p-4 lg:p-6 border border-gray-300 sm:col-span-2 lg:col-span-1">
                        <div class="flex items-center justify-between">
                            <div>
                                <p class="text-xs lg:text-sm font-medium text-gray-600">DOB</p>
                                <p class="text-2xl lg:text-3xl font-bold text-gray-900"><%= user.dob %></p>
                            </div>
                            <div class="w-10 h-10 lg:w-12 lg:h-12 bg-purple-600 bg-opacity-20 rounded-lg flex items-center justify-center">
                                <svg class="w-5 h-5 lg:w-6 lg:h-6 text-purple-400" fill="currentColor" viewBox="0 0 24 24">
                                    <path d="M19 3H5c-1.1 0-2 .9-2 2v14c0 1.1.9 2 2 2h14c1.1 0 2-.9 2-2V5c0-1.1-.9-2-2-2zM9 17H7v-7h2v7zm4 0h-2V7h2v10zm4 0h-2v-4h2v4z"/>
                                </svg>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Recent Activity & Upcoming Appointments -->
                <div class="grid grid-cols-1 lg:grid-cols-2 gap-4 lg:gap-8">
                    <!-- Recent Activity -->
                    <div class="bg-gray-100 rounded-xl shadow-sm border border-gray-300">
                        <div class="p-4 lg:p-6 border-b border-gray-300">
                            <h3 class="text-base lg:text-lg font-semibold text-gray-900">Recent Activity</h3>
                        </div>
                        <div class="p-4 lg:p-6">
                            <div class="space-y-4">
                                <div class="flex items-start space-x-3">
                                    <div class="w-2 h-2 bg-blue-600 rounded-full mt-2"></div>
                                    <div>
                                        <p class="text-sm font-medium text-gray-900">Appointment confirmed</p>
                                        <p class="text-xs text-gray-600">Dr. Smith - Cardiology • 2 hours ago</p>
                                    </div>
                                </div>
                                <div class="flex items-start space-x-3">
                                    <div class="w-2 h-2 bg-green-600 rounded-full mt-2"></div>
                                    <div>
                                        <p class="text-sm font-medium text-gray-900">Appointment completed</p>
                                        <p class="text-xs text-gray-600">Dr. Johnson - General Medicine • 1 day ago</p>
                                    </div>
                                </div>
                                <div class="flex items-start space-x-3">
                                    <div class="w-2 h-2 bg-yellow-500 rounded-full mt-2"></div>
                                    <div>
                                        <p class="text-sm font-medium text-gray-900">Appointment rescheduled</p>
                                        <p class="text-xs text-gray-600">Dr. Chen - Dermatology • 3 days ago</p>
                                    </div>
                                </div>
                                <div class="flex items-start space-x-3">
                                    <div class="w-2 h-2 bg-purple-600 rounded-full mt-2"></div>
                                    <div>
                                        <p class="text-sm font-medium text-gray-900">New appointment booked</p>
                                        <p class="text-xs text-gray-600">Dr. Williams - Orthopedics • 5 days ago</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Upcoming Appointments -->
                    <div class="bg-gray-100 rounded-xl shadow-sm border border-gray-300">
                        <div class="p-4 lg:p-6 border-b border-gray-300">
                            <h3 class="text-base lg:text-lg font-semibold text-gray-900">Upcoming Appointments</h3>
                        </div>
                        <div class="p-4 lg:p-6">
                            <div class="space-y-4">
                                <% upcomingAppointments.forEach(function(appt) { %>
                                <div class="flex items-center justify-between p-4 bg-blue-600 bg-opacity-20 rounded-lg border border-blue-600 border-opacity-30 text-blue-800">
                                    <div>
                                        <p class="font-medium text-gray-900">Dr. <%= appt.doctor?.name || "Unknown" %></p>
                                        <p class="text-sm text-gray-700"><%= appt.doctor?.speciality || "General Consultation" %></p>
                                        <p class="text-xs text-blue-800"><%= appt.date %>, <%= appt.time %></p>
                                    </div>
                                </div>
                                <% }); %>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Appointments Section -->
            <div id="appointments-section" class="section-content hidden">
                <div class="bg-gray-100 rounded-xl shadow-sm border border-gray-300">
                    <div class="p-4 lg:p-6 border-b border-gray-300">
                        <div class="flex flex-col sm:flex-row sm:items-center justify-between space-y-3 sm:space-y-0">
                            <h3 class="text-base lg:text-lg font-semibold text-gray-900">My Appointments</h3>
                        </div>
                    </div>
                    <div class="p-4 lg:p-6">
                        <div class="space-y-4">
                            <% appointments.forEach(function(appt) { %>
                            <div class="border border-gray-300 rounded-lg p-4 hover:bg-gray-200 transition-colors duration-200 text-gray-900">
                                <div class="flex items-center justify-between">
                                    <div class="flex items-center space-x-3 lg:space-x-4">
                                        <div class="w-10 h-10 lg:w-12 lg:h-12 bg-blue-600 bg-opacity-20 rounded-lg flex items-center justify-center flex-shrink-0">
                                            <svg class="w-5 h-5 lg:w-6 lg:h-6 text-blue-400" fill="currentColor" viewBox="0 0 24 24">
                                                <path d="M12 21.35l-1.45-1.32C5.4 15.36 2 12.28 2 8.5 2 5.42 4.42 3 7.5 3c1.74 0 3.41.81 4.5 2.09C13.09 3.81 14.76 3 16.5 3 19.58 3 22 5.42 22 8.5c0 3.78-3.4 6.86-8.55 11.54L12 21.35z"/>
                                            </svg>
                                        </div>
                                        <div class>
                                            <h4 class="font-semibold text-gray-900 text-sm lg:text-base">Dr. <%= appt.doctor?.name || "Unknown" %></h4>
                                            <p class="text-xs lg:text-sm text-gray-700"><%= appt.doctor?.clinic?.name || "Clinic Info" %></p>
                                            <p class="text-xs lg:text-sm text-gray-600"><%= appt.doctor?.speciality || "Speciality" %></p>
                                        </div>
                                    </div>
                                    <div class="text-right pt-4 lg:text-right">
                                        <p class="font-medium text-gray-900 text-sm lg:text-base"><%= appt.date %></p>
                                        <p class="text-xs lg:text-sm text-gray-700"><%= appt.time %></p>
                                        <span class="inline-block px-2 py-1 text-xs font-medium
                                            <%= appt.status === "completed" ? "text-green-600 bg-green-200" :
                                                appt.status === "cancelled" ? "text-red-600 bg-red-200" :
                                                "text-blue-600 bg-blue-200" %>
                                            rounded-full mt-1">
                                            <%= appt.status %>
                                        </span>
                                    </div>
                                </div>
                                <div class="mt-4 flex flex-wrap gap-2 lg:gap-3">
                                    <button class="px-3 lg:px-4 py-2 text-xs lg:text-sm font-medium text-gray-700 bg-gray-200 rounded-lg hover:bg-gray-300 transition-colors duration-200">Reschedule</button>
                                    <form method="POST" action="/api/delete-appointment/<%= appt._id %>" onsubmit="return confirm('Are you sure you want to delete this appointment?');">
                                        <button type="submit" class="px-3 lg:px-4 py-2 text-xs lg:text-sm font-medium text-red-600 bg-red-200 rounded-lg hover:bg-red-300 transition-colors duration-200">
                                            Delete
                                        </button>
                                    </form>
                                </div>
                            </div>
                            <% }); %>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Appointment History Section -->
            <div id="appointment-history-section" class="section-content hidden">
                <div class="bg-gray-100 rounded-xl shadow-sm border border-gray-300">
                    <div class="p-6 border-b border-gray-300">
                        <div class="flex items-center justify-between">
                            <h3 class="text-lg font-semibold text-gray-900">Appointment History</h3>
                        </div>
                    </div>
                    <div class="p-6">
                        <div class="space-y-4">
                            <% appointments.forEach(function(appt) { %>
                            <div class="border border-gray-300 rounded-lg p-4 bg-gray-200 bg-opacity-50 text-gray-900">
                                <div class="flex items-center justify-between">
                                    <div class="flex items-center space-x-4">
                                        <div class="w-12 h-12 bg-green-600 bg-opacity-20 rounded-lg flex items-center justify-center">
                                            <svg class="w-6 h-6 text-green-600" fill="currentColor" viewBox="0 0 24 24">
                                                <path d="M9 16.17L4.83 12l-1.42 1.41L9 19 21 7l-1.41-1.41z"/>
                                            </svg>
                                        </div>
                                        <div>
                                            <h4 class="font-semibold text-sm text-gray-900">Dr. <%= appt.doctor?.name || "Unknown" %></h4>
                                            <p class="text-xs text-gray-700"><%= appt.doctor?.clinic?.name || "Clinic Info" %></p>
                                            <p class="text-xs text-gray-600"><%= appt.doctor?.speciality || "Speciality" %></p>
                                        </div>
                                    </div>
                                    <div class="text-right pt-4">
                                        <p class="font-medium text-sm text-gray-900"><%= appt.date %></p>
                                        <p class="text-xs text-gray-700"><%= appt.time %></p>
                                        <span class="inline-block px-2 py-1 text-xs font-medium
                                            <%= appt.status === "completed" ? "text-green-600 bg-green-200" :
                                                appt.status === "cancelled" ? "text-red-600 bg-red-200" :
                                                "text-blue-600 bg-blue-200" %>
                                            rounded-full mt-1">
                                            <%= appt.status %>
                                        </span>
                                    </div>
                                </div>
                                <div class="mt-4 flex space-x-3">
                                    <button onclick="location.href = '/api/book-appointment/<%= appt.doctor?._id %>'" class="px-4 py-2 text-sm font-medium text-gray-700 bg-gray-200 rounded-lg hover:bg-gray-300 transition-colors duration-200">Book Follow-up</button>
                                </div>
                            </div>
                            <% }); %>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Profile Section -->
            <div id="profile-section" class="section-content hidden">
                <div class="max-w-7xl">
                    <div class="bg-gray-100 rounded-xl shadow-sm border border-gray-300">
                        <div class="p-6 border-b border-gray-300">
                            <h3 class="text-lg font-semibold text-gray-900">Profile Settings</h3>
                        </div>
                        <div class="p-6">
                            <form class="space-y-6">
                                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                                    <div>
                                        <label class="block text-sm font-medium text-gray-700 mb-2">First Name</label>
                                        <input type="text" value="<%= user.fullname.split(' ')[0] %>" class="w-full px-4 py-3 bg-gray-200 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 text-gray-900">
                                    </div>
                                    <div>
                                        <label class="block text-sm font-medium text-gray-700 mb-2">Last Name</label>
                                        <input type="text" value="<%= user.fullname.split(' ')[1] %>" class="w-full px-4 py-3 bg-gray-200 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 text-gray-900">
                                    </div>
                                </div>
                                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                                    <div>
                                        <label class="block text-sm font-medium text-gray-700 mb-2">Phone</label>
                                        <input type="tel" value="<%= user.phone %>" class="w-full px-4 py-3 bg-gray-200 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 text-gray-900">
                                    </div>
                                </div>
                                <div class="flex space-x-4">
                                    <button type="submit" class="px-6 py-3 bg-blue-600 text-white font-medium rounded-lg hover:bg-blue-700 transition-colors duration-200">Save Changes</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>

    <script>
        // Navigation functionality
        function showSection(sectionName) {
            // Hide all sections
            const sections = document.querySelectorAll('.section-content');
            sections.forEach(section => section.classList.add('hidden'));

            // Show selected section
            const targetSection = document.getElementById(sectionName + '-section');
            if (targetSection) {
                targetSection.classList.remove('hidden');
            }

            // Update navigation active state
            const navItems = document.querySelectorAll('.nav-item');
            navItems.forEach(item => {
                item.classList.remove('bg-gray-200', 'text-blue-600');
                item.classList.add('text-gray-600');
            });

            // Update page title and subtitle
            const titles = {
                'dashboard': {
                    title: 'Dashboard',
                    subtitle: 'Welcome back, <%= user.fullname.split(" ")[0] %>! Here\'s your health overview.'
                },
                'appointments': {
                    title: 'My Appointments',
                    subtitle: 'View and manage your upcoming appointments.'
                },
                'book-appointment': {
                    title: 'Book Appointment',
                    subtitle: 'Schedule a new appointment with your healthcare provider.'
                },
                'appointment-history': {
                    title: 'Appointment History',
                    subtitle: 'View your complete appointment history and summaries.'
                },
                'profile': {
                    title: 'Profile Settings',
                    subtitle: 'Update your personal information and preferences.'
                }
            };
            const pageInfo = titles[sectionName];
            if (pageInfo) {
                document.getElementById('pageTitle').textContent = pageInfo.title;
                document.getElementById('pageSubtitle').textContent = pageInfo.subtitle;
            }
        }

        // Form modal handler
        document.addEventListener('submit', function(e) {
            const modal = document.createElement('div');
            modal.className = 'fixed inset-0 bg-black bg-opacity-75 flex items-center justify-center z-50 p-4';
            modal.innerHTML = `
                <div class="bg-gray-100 border border-gray-300 rounded-2xl p-8 max-w-md w-full">
                    <div class="text-center">
                        <div class="w-16 h-16 bg-green-600 bg-opacity-20 rounded-full flex items-center justify-center mx-auto mb-4">
                            <svg class="w-8 h-8 text-green-600" fill="currentColor" viewBox="0 0 24 24">
