    <!-- Main Content -->
    <div class="flex items-center justify-center pt-24 p-4 min-h-screen animate-fadeIn">
    <div class="glass-effect rounded-2xl p-8 w-full max-w-md shadow-2xl">
        <!-- Header -->
        <div class="text-center mb-8">
            <div class="w-16 h-16 bg-white rounded-full p-4 flex items-center justify-center mx-auto mb-4">
               
                        

                        <script src="https://cdn.lordicon.com/lordicon.js"></script>
                        <lord-icon
                            src="https://cdn.lordicon.com/kdduutaw.json"
                            trigger="hover"
                            stroke="bold"
                            state="hover-looking-around"
                            colors="primary:#3080e8,secondary:#08a88a"
                            class="w-full h-full"
                        </lord-icon>

                    
            </div>
            <h1 class="text-2xl font-bold text-blue-600 mb-2">Swastha<span class="text-2xl font-bold text-teal-400 mb-2">Setu</span></h1>
            <p class="text-gray-600">Secure Healthcare Portal</p>
        </div>

        <!-- User Type Toggle -->
        <div class="flex bg-gray-100 rounded-xl p-1 mb-6">
            <button id="doctorTab" class="flex-1 py-3 px-4 rounded-lg text-sm font-medium transition-all duration-200 toggle-active">
                <svg class="w-4 h-4 inline mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                </svg>
                Doctor
            </button>
            <button id="patientTab" class="flex-1 py-3 px-4 rounded-lg text-sm font-medium transition-all duration-200 toggle-inactive">
                <svg class="w-4 h-4 inline mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"></path>
                </svg>
                Patient
            </button>
        </div>

        <!-- Login Form -->
        <form action="/login" method="POST" id="loginForm" class="space-y-6">
            <input type="hidden" name="userType" id="userType" value="doctor" />

            <!-- Email Field -->
            <div>
                <label for="email" class="block text-sm font-medium text-gray-700 mb-2">Email Address</label>
                <input type="email" id="email" name="email" required
                    class="w-full px-4 py-3 bg-white/70 border border-gray-300 rounded-lg text-gray-800 placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-200"
                    placeholder="Enter your email">
            </div>

            <!-- Password Field -->
            <div>
                <label for="password" class="block text-sm font-medium text-gray-700 mb-2">Password</label>
                <div class="relative">
                    <input type="password" id="password" name="password" required
                        class="w-full px-4 py-3 bg-white/70 border border-gray-300 rounded-lg text-gray-800 placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-200 pr-12"
                        placeholder="Enter your password">
                    <button type="button" id="togglePassword" class="absolute right-3 top-1/2 transform -translate-y-1/2 text-gray-500 hover:text-gray-700 transition-colors">
                        <svg id="eyeIcon" class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                        </svg>
                    </button>
                </div>
            </div>



            <!-- Login Button -->
            <button type="submit" id="loginButton"
                class="w-full bg-blue-600 hover:bg-blue-700 text-white font-semibold py-3 px-4 rounded-lg transition-all duration-200 transform hover:scale-[1.02] focus:outline-none focus:ring-2 focus:ring-blue-500 shadow-lg">
                Sign In as Doctor
            </button>
        </form>





        <!-- Footer -->
        <div class="text-center mt-8 pt-6 border-t border-gray-300">
            <p class="text-gray-600 text-sm">
                Don't have an account? 
                <a href="#" id="registerLink" class="text-blue-600 hover:underline">Register Now</a>
            </p>
        </div>
    </div>
    </div>

    <script>
        // Tab switching functionality
        const doctorTab = document.getElementById('doctorTab');
        const patientTab = document.getElementById('patientTab');
        const loginButton = document.getElementById('loginButton');
        
        let currentUserType = 'doctor';

        doctorTab.addEventListener('click', () => {
            currentUserType = 'doctor';
            doctorTab.className = 'flex-1 py-3 px-4 rounded-lg text-sm font-medium transition-all duration-200 toggle-active';
            patientTab.className = 'flex-1 py-3 px-4 rounded-lg text-sm font-medium transition-all duration-200 toggle-inactive';
            document.getElementById('userType').value = 'doctor';
            loginButton.textContent = 'Sign In as Doctor';
        });

        patientTab.addEventListener('click', () => {
            currentUserType = 'patient';
            patientTab.className = 'flex-1 py-3 px-4 rounded-lg text-sm font-medium transition-all duration-200 toggle-active';
            doctorTab.className = 'flex-1 py-3 px-4 rounded-lg text-sm font-medium transition-all duration-200 toggle-inactive';
            document.getElementById('userType').value = 'patient';
            loginButton.textContent = 'Sign In as Patient';
        });

        // Password visibility toggle
        const togglePassword = document.getElementById('togglePassword');
        const passwordField = document.getElementById('password');
        const eyeIcon = document.getElementById('eyeIcon');

        togglePassword.addEventListener('click', () => {
            const type = passwordField.getAttribute('type') === 'password' ? 'text' : 'password';
            passwordField.setAttribute('type', type);
            
            if (type === 'text') {
                eyeIcon.innerHTML = `
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.875 18.825A10.05 10.05 0 0112 19c-4.478 0-8.268-2.943-9.543-7a9.97 9.97 0 011.563-3.029m5.858.908a3 3 0 114.243 4.243M9.878 9.878l4.242 4.242M9.878 9.878L3 3m6.878 6.878L21 21"></path>
                `;
            } else {
                eyeIcon.innerHTML = `
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                `;
            }
        });

        // Registration link functionality
        document.getElementById('registerLink').addEventListener('click', (e) => {
            e.preventDefault();
            
            if (currentUserType === 'doctor') {
                
                window.location.href = "/doctor/register";


            } else {
                // Create modal for patient registration redirect
                window.location.href = "/patientReg"
            }
        });

        // Form submission
        

        // Input focus effects
        const inputs = document.querySelectorAll('input[type="email"], input[type="password"]');
        inputs.forEach(input => {
            input.addEventListener('focus', () => {
                input.classList.add('ring-2', 'ring-blue-500');
            });
            
            input.addEventListener('blur', () => {
                input.classList.remove('ring-2', 'ring-blue-500');
            });
        });
    </script>
